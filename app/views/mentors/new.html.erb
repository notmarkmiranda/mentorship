<div class="container services-container">
  <div class="row">
    <div class="col-md-12 services-header">
      MENTOR
      <div>
        Create Ye a New Mentor Account
        <!-- These are the things we do. -->
      </div>
    </div>
  </div>
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <%= form_for @mentor do |f| %>
      <div class="form-group">
        <span>*</span><%= f.label :location, "Location: " %>
        <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
      </div>
      <div class="form-group">
        <span>*</span><%= f.label :timezone, "Time Zone: " %>
        <%= f.select :mentor_timezone_id, options_from_collection_for_select(@timezones, "id", "name"),
          {:prompt => "Select field"}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <span>*required</span><br />
        <%= f.submit "Create Profile", class: "btn btn-turing btn-lg btn-block", id:"complete-profile" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
